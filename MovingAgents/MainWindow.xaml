<Window x:Class="MovingAgents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas Name="Canvas" Grid.Row="0">
            <Rectangle Name="Charlie" Canvas.Left="5" Canvas.Bottom="5" Height="15" Width="10" Fill="BurlyWood" Stroke="Blue" StrokeThickness="2"></Rectangle>
        </Canvas>
        <Label Name="Status" Grid.Row="1">Status: </Label>
    </Grid>
</Window>
